[Написать новому клиенту]

channelType =
    [whatsapp = WhatsApp]
    [waba = WABA]
    [telegram_private = Telegram]

get_search_results = {
    method: 'get_search_results',
    params: {
        search_string: '79283810988',
        is_only_whatsapp_out: true,
    },
}

get_chat_start_chat_channel_search = {
    method: 'get_chat_start_chat_channel_search',
    params: {
        contact: {
            phone: '79283810988',
        },
    },
}

activeChannelTypes
    [
        whatsapp
        waba
        telegram_private
    ].filter(type) =>

        get_search_results.
            found_list.
            includes(item.chat_channel_type == type) &&

        get_chat_start_chat_channel_search.
            includes(item.channel_type == type)


Select(Выберите канал)

    get_chat_start_chat_channel_search.
        filter(item.chat_channel_type = channelType)
